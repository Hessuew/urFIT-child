---
import imgAndrew2 from '~/assets/images/principalInvestigator/andrew-agbaje-landing-picture.webp';
import CallToAction from '~/components/widgets/CallToAction.astro';
import Note from '~/components/widgets/Note.astro';
import Academic from '~/components/widgets/principal-investigator/Academic.astro';
import Affiliations from '~/components/widgets/principal-investigator/Affiliations.astro';
import AwardsAndHonours from '~/components/widgets/principal-investigator/AwardsAndHonours.astro';
import Contact from '~/components/widgets/principal-investigator/Contact.astro';
import Editorial from '~/components/widgets/principal-investigator/Editorial.astro';
import Memberships from '~/components/widgets/principal-investigator/Memberships.astro';
import PIHero from '~/components/widgets/principal-investigator/PIHero.astro';
import TableOfContents from '~/components/widgets/TableOfContents.astro';
import Layout from '~/layouts/PageLayout.astro';
import { getPermalink } from '~/utils/permalinks';

const metadata = {
  title: 'Official Website of Andrew O. Agbaje – Child Health Research',
  description:
    'Discover the official site of Prof. Andrew O. Agbaje, leading expert in child health, epidemiology, and WHtR research at the University of Eastern Finland.',
  ignoreTitleTemplate: true,
  openGraph: {
    title: 'Official Website of Andrew O. Agbaje – Child Health Research',
    description:
      'Discover the official site of Prof. Andrew O. Agbaje, leading expert in child health, epidemiology, and WHtR research at the University of Eastern Finland.',
    type: 'profile',
    image: imgAndrew2,
    article: {
      title: 'Official Website of Andrew O. Agbaje – Child Health Research',
      description:
        'Discover the official site of Prof. Andrew O. Agbaje, leading expert in child health, epidemiology, and WHtR research at the University of Eastern Finland.',
      publishedTime: '2025-01-17T05:15:47+02:00',
      modifiedTime: '2025-01-17T05:15:47+02:00',
      authors: ['urFIT-child Research Group'],
      tags: [
        'Prof. Andrew Agbaje',
        'Dr. Andrew Agbaje',
        'principal investigator',
        'pediatric health research',
        'children’s fitness research',
        'waist to height ratio expert',
        'childhood obesity prevention',
        'academic research leadership',
        'urFIT-child research',
      ],
    },
  },
  twitter: {
    handle: '@urFIT-child',
    site: '@urFIT-child',
    cardType: 'summary_large_image',
  },
};
---

<Layout metadata={metadata} schemaType="person">
  <PIHero />

  <Note
    text="Let's keep fighting for kids' health, because today's kids are tomorrow's adults"
    author="Prof. Andrew Agbaje"
  />

  <TableOfContents
    classes={{ container: 'pt-0 md:pt-0 lg:pt-0 xl:pt-0' }}
    tocItems={[
      {
        id: 'academic',
        title: 'Academic Excellence',
        level: 2,
      },
      {
        id: 'awards-and-honours',
        title: 'Awards and Honours',
        level: 2,
      },
      {
        id: 'editorial',
        title: 'Editorial and Journal Roles',
        level: 2,
      },
      {
        id: 'affiliations',
        title: 'Affiliations',
        level: 2,
      },
      {
        id: 'memberships',
        title: 'Memberships',
        level: 2,
      },
      {
        id: 'contact',
        title: 'Contact Information',
        level: 2,
      },
    ]}
  />

  <Academic />

  <AwardsAndHonours />

  <Editorial />

  <Affiliations />

  <Memberships />

  <Contact />

  <!-- CallToAction Widget *********** -->

  <CallToAction
    title="Our waist to height ratio calculator WHtR"
    subtitle="Waist to height ratio calculator WHtR 2025 based on 30 years of WHtR data. Discover normal waist to height ratio and healthy waist to height ratio values."
    actions={[
      {
        variant: 'primary',
        target: '_self',
        text: 'Try the waist to height ratio calculator',
        href: getPermalink('/waist-height-calculator'),
        icon: 'tabler:calculator',
      },
    ]}
  />
</Layout>
