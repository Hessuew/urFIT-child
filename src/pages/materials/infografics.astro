---
import cholesterolPassport from '~/assets/images/infographic/Cholesterol passport for adolescents to halt the world’s deadliest disease – atherosclerosis.webp';
import FilterContainer from '~/components/filters/FilterContainer.astro';
import Hero from '~/components/widgets/Hero.astro';
import InfoGraficsList from '~/components/widgets/list/InfoGraficsList.astro';
import Spacer from '~/components/widgets/Spacer.astro';
import { infographicTypes } from '~/data/infografics';
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'Research Infographics | Visual Insights in Child Health Research',
  description:
    'Explore our collection of research infographics covering physical activity, cardiovascular health, body composition, and metabolic health in children. Each infographic presents key findings from our longitudinal studies in an accessible visual format.',
  ignoreTitleTemplate: true,
  openGraph: {
    title: 'Research Infographics | Visual Insights in Child Health Research',
    description:
      'Explore our collection of research infographics covering physical activity, cardiovascular health, body composition, and metabolic health in children. Each infographic presents key findings from our longitudinal studies in an accessible visual format.',
    type: 'website',
    image: cholesterolPassport,
    article: {
      publishedTime: '2025-01-17T05:19:24+02:00',
      modifiedTime: '2025-01-17T05:19:24+02:00',
      authors: ['urFIT-child Research Group'],
      tags: [
        'research infographics',
        'visual research',
        'cardiovascular health',
        'physical activity',
        'body composition',
        'metabolic health',
        'child health research',
      ],
    },
  },
  twitter: {
    handle: '@urFIT-child',
    site: '@urFIT-child',
    cardType: 'summary_large_image',
  },
};
---

<Layout metadata={metadata}>
  <Hero
    tagline="Infographics"
    title="Visual insights of child health research"
    subtitle="Explore our collection of research infographics covering physical activity, cardiovascular health, body composition, and metabolic health in children. Each infographic presents key findings from our longitudinal studies in an accessible visual format."
  />

  <FilterContainer
    options={[infographicTypes]}
    allLabels={['All Types']}
    showSearch={true}
    targetId="infografics-list"
    classes={{
      container: 'py-0 lg:py-0 md:py-0 xl:py-[0px] xl:mb-0',
    }}
  />

  <div id="infografics-list">
    <InfoGraficsList />
  </div>

  <Spacer size="sm" />
</Layout>
