---
import { twMerge } from 'tailwind-merge';

interface Props {
  text?: string;
  author?: string;
  highlight?: boolean;
  classes?: {
    container?: string;
    text?: string;
    author?: string;
  };
}

const {
  text = "Let's keep fighting for kids' health, because today's kids are tomorrow's adults",
  author,
  highlight = false,
  classes = {},
} = Astro.props;
---

<div class={twMerge('w-full py-16 xl:py-[64px]', classes?.container)}>
  <section
    class:list={[
      'not-prose intersect-once intersect-quarter motion-reduce:opacity-100 motion-safe:opacity-0 motion-safe:intersect:animate-fade p-8 rounded-lg',
      {
        'bg-transparent': !highlight,
        'bg-blue-50 dark:bg-slate-800 shadow-sm': highlight,
      },
    ]}
  >
    <blockquote
      class="max-w-6xl xl:max-w-[1152px] mx-auto px-4 sm:px-6 xl:px-[24px] text-center text-base xl:text-[16px] xl:leading-[24px]"
    >
      <span class="text-4xl text-blue-600/25 dark:text-blue-400/25 font-serif">"</span>
      <p
        class={twMerge(
          'text-xl md:text-2xl xl:text-[24px] xl:leading-[32px] font-serif italic mb-4 xl:mb-[16px] text-slate-700 dark:text-slate-300',
          classes?.text
        )}
      >
        {text}
      </p>
      {
        author && (
          <cite
            class={twMerge(
              'text-sm md:text-base xl:text-[16px] xl:leading-[24px] font-medium text-slate-600 dark:text-slate-400 font-sans',
              classes?.author
            )}
          >
            â€” {author}
          </cite>
        )
      }
    </blockquote>
  </section>
</div>
