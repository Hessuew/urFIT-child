---
import WidgetWrapper from '../ui/WidgetWrapper.astro';

interface Props {
  title?: string;
  isDark?: boolean;
}

const { title = 'Acknowledgment', isDark = false } = Astro.props;
---

<WidgetWrapper
  isDark={isDark}
  containerClass="max-w-3xl xl:max-w-[768px] mx-auto px-4 sm:px-6 xl:px-[24px] py-4 lg:py-6 xl:py-[24px]"
>
  <div class="bg-blue-50 dark:bg-slate-900 rounded-xl p-6 sm:p-8 xl:p-[32px]">
    <slot name="title">
      <h2
        id="acknowledgment-title"
        class="text-2xl xl:text-[24px] xl:leading-[32px] font-bold mb-4 xl:mb-[16px] text-center"
      >
        {title}
      </h2>
    </slot>
    <div
      class="text-gray-700 dark:text-gray-300 prose dark:prose-invert max-w-none text-base xl:text-[16px] xl:leading-[24px]"
    >
      <slot name="content" />
    </div>
  </div>
</WidgetWrapper>
